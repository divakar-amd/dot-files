set is    "incremental search

:set ch=2 "command-line height

""""""""""""""""NEW"""""""""""""""
colors darkblue

set hlsearch               " highlight-search
set number                 " line number
"set mousemodel=popup      " right-click popup
set virtualedit=all        " allows cursor anywhere in buffer
syntax on                  " highlight code syntax (e.g. keywords)
"set guioptions+=a          " selected text with mouse is automatically copied
":set guicursor+=a:blinkon0 " disable cursor blinking in all modes (insert, edit etc.)
set tabstop=8
set shiftwidth=4
set softtabstop=4          " no. of spaces when in insert mode when Tab is pressed
set expandtab              " convert tabs to spaces
set mouse=a
